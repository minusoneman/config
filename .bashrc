set -o vi
alias ls='ls -h --color=auto'
alias ll='ls -l'
alias la='ls -la'
alias grep='grep --color'
alias vgaon="xrandr --output VGA-0 --auto"
alias vgaoff="xrandr --output VGA-0 --off"
alias hdmion="xrandr --output HDMI-0 --auto"
alias hdmioff="xrandr --output HDMI-0 --off"
export PATH=$PATH:~/.gem/ruby/1.9.1/bin
